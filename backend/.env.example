# Database
DATABASE_URL=sqlite:///./eduscribe.db

# AI/ML Settings
WHISPER_MODEL_SIZE=tiny
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM API Keys (get from respective providers)
GROQ_API_KEY=your_groq_api_key_here  # Get from https://console.groq.com
OPENAI_API_KEY=your_openai_api_key_here  # Optional, for OpenAI models
HF_TOKEN=your_huggingface_token_here  # Optional, for private HF models

# IMPORTANT: Copy this file to .env and add your actual API keys
# cp .env.example .env
# Then edit .env with your real keys

# Audio Processing
AUDIO_SAMPLE_RATE=16000
CHUNK_DURATION=20

# RAG Settings
FAISS_TOP_K=3
IMPORTANCE_THRESHOLD=0.0
HISTORY_CHUNKS=4

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
